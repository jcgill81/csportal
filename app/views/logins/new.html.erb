
<% provide(:title, 'New Login') %>
<h1>Create new Login</h1>

<div id="formholder">
	<%= form_for(@login) do |f| %>
		<%= render 'shared/error_messages_login' %>

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit "Create new Login", id:"subtmit" %>
	<% end %>
</div>
