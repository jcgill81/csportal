
<% provide(:title, 'New Login') %>
<div><h1>Create new Login</h1></div>


<div id="formholder column">
	<%= form_for(@login) do |f| %>
		<%= render 'shared/error_messages_login' %>

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
			
		<div>
			<%= f.submit "Create new Login", class:"btn btn-large btn-primary" %>
		</div>
		
	<% end %>
</div>
